<MainWindow>:
    orientation: 'vertical'
    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
    ScreenManager:
        id: scrn_mngr
        transition: FadeTransition()
        Screen:
            name: 'scrn_auth'
            Auth:
                id: auth
        Screen:
            name: 'scrn_home'
            Home:
                id: home
        Screen:
            name: 'scrn_prescriptions'
            Prescriptions:
                id: prescriptions
        Screen:
            name: 'scrn_analytics'
        Screen:
            name: 'scrn_sales'
        Screen:
            name: 'scrn_customers'
        Screen:
            name: 'scrn_finance'