<Home>:
    spacing: dp(8)
    canvas.before:
        Color:
            rgba: app.colors.secondary
        Rectangle:
            pos: self.pos
            size: self.size
    BoxLayout:
        id: nav_menu
        size_hint_x: .2 #0 - 1
        orientation: 'vertical'
        BoxLayout:
            id: logo_nbox
            size_hint_y: .15
            padding: dp(8)
            AnchorLayout:
                anchor_x: 'right'
                size_hint_x: None
                width: dp(32)
                IconButton:
                    source: 'assets/imgs/logo.png'
                    size_hint_y: None
                    height: dp(32)
            Text:
                text: 'Unique Dash'
                font_name: app.fonts.heading
                font_size: app.fonts.size.h3
        GridLayout:
            id: tabs_box
            cols: 1
            spacing: dp(4)
            size_hint_y: .6
            canvas.before:
                Color:
                    rgba: rgba("#c4c4c4")
                Rectangle:
                    pos: self.pos
                    size: [self.size[0], dp(1)]
            NavTab:
                text: 'Dashboard'
                state: 'down'
                icon: 'assets/icons/ic_grid.png'
                icon_active: 'assets/icons/ic_grid_active.png'
                on_release: scrn_mngr.current = "scrn_dashboard"
            NavTab:
                text: 'Font Office'
                icon: 'assets/icons/ic_trend.png'
                icon_active: 'assets/icons/ic_trend_active.png'
                on_release: scrn_mngr.current = "scrn_fontoffice"
            NavTab:
                text: 'Doctor'
                icon: 'assets/icons/ic_cart.png'
                icon_active: 'assets/icons/ic_cart_active.png'
                on_release: scrn_mngr.current = "scrn_doctor"
            NavTab:
                text: 'Pharmacy'
                icon: 'assets/icons/ic_people.png'
                icon_active: 'assets/icons/ic_people_active.png'
                on_release: scrn_mngr.current = "scrn_pharmacy"
            NavTab:
                text: 'Finance'
                icon: 'assets/icons/ic_money.png'
                icon_active: 'assets/icons/ic_money_active.png'
                on_release: scrn_mngr.current = "scrn_accounts"
            NavTab:
                text: 'Lab'
                icon: 'assets/icons/ic_bag.png'
                icon_active: 'assets/icons/ic_bag_active.png'
                on_release: scrn_mngr.current = "scrn_labs"
            NavTab:
                text: 'Report'
                icon: 'assets/icons/ic_bag.png'
                icon_active: 'assets/icons/ic_bag_active.png'
                on_release: scrn_mngr.current = "scrn_report"
            NavTab:
                text: 'Drug Stock'
                icon: 'assets/icons/ic_bag.png'
                icon_active: 'assets/icons/ic_bag_active.png'
                on_release: scrn_mngr.current = "scrn_drugstock"
            NavTab:
                text: 'HRM'
                icon: 'assets/icons/ic_bag.png'
                icon_active: 'assets/icons/ic_bag_active.png'
                on_release: scrn_mngr.current = "scrn_hrm"
            # NavTab:
            #     text: 'Sales'
            #     icon: 'assets/icons/ic_bag.png'
            #     icon_active: 'assets/icons/ic_bag_active.png'
            #     on_release: scrn_mngr.current = "scrn_sales"
        GridLayout:
            id: sec_box
            size_hint_y: .3
            cols: 1
            padding: dp(12)
            # NavTab:
            #     text: 'Support'
            #     icon: 'assets/icons/ic_chat.png'
            #     icon_active: 'assets/icons/ic_chat_active.png'
            #     on_release: scrn_mngr.current = "scrn_support"
            NavTab:
                text: 'Settings'
                icon: 'assets/icons/ic_settings.png'
                icon_active: 'assets/icons/ic_settings_active.png'
                on_release: scrn_mngr.current = "scrn_setting"
            NavTab:
                text: 'Log out'
                icon: 'assets/icons/ic_cart.png'
                icon_active: 'assets/icons/ic_cart_active.png'
                on_release: scrn_mngr.current = "scrn_logout"
    BoxLayout:
        size_hint_x: .85 #0 - 1
        spacing: dp(8)
        orientation: 'vertical'
        padding: [dp(16), dp(8), dp(12), dp(8)]
        canvas.before:
            Color:
                rgba: app.colors.grey_light
            Rectangle:
                pos: self.pos
                size: self.size
        BoxLayout:
            id: actionbar
            size_hint_y: None
            height: dp(54)
            BoxLayout:
                size_hint_x: .7
                orientation: 'vertical'
                Text:
                    text: 'Good morning %s'%root.username
                    font_size: app.fonts.size.h3
                    font_name: app.fonts.heading
                    color: app.colors.secondary
                    size_hint_y: .6
                Text:
                    text: 'Friday, 20 March 2022'
                    font_size: app.fonts.size.h6
                    font_name: app.fonts.subheading
                    color: app.colors.grey_dark
                    size_hint_y: .4
            BoxLayout:
                size_hint_x: .3
                spacing: dp(8)
                Widget:
                AnchorLayout:
                    ShadowBox:
                        radius: [self.height]
                        size_hint: [None, None]
                        size: [dp(42), dp(42)]
                        padding: dp(10)
                        elevation: 4
                        IconButton:
                            source: 'assets/icons/ic_search.png'
                AnchorLayout:
                    ShadowBox:
                        radius: [self.height]
                        size_hint: [None, None]
                        size: [dp(42), dp(42)]
                        padding: dp(10)
                        elevation: 4
                        elevation: 4
                        IconButton:
                            source: 'assets/icons/ic_notif.png'
                AnchorLayout:
                    ShadowBox:
                        radius: [self.height]
                        size_hint: [None, None]
                        size: [dp(42), dp(42)]
                        elevation: 4
                        Widget:
                            canvas.before:
                                Color:
                                    rgba: [1,1,1,1]
                                Ellipse:
                                    pos: self.pos
                                    size: self.size
                                    source: root.avatar
                
        BoxLayout:
            ScreenManager:
                id: scrn_mngr
                Screen:
                    name: 'scrn_dashboard'
                    Dashboard:
                        id: dashboard
                Screen:
                    name: 'scrn_accounts'
                    Accounts:
                        id: accounts
                Screen:
                    name: 'scrn_doctor'
                    Doctor:
                        id: doctor
                Screen:
                    name: 'scrn_drugstock'
                    Drugstock:
                        id: drugstock
                Screen:
                    name: 'scrn_fontoffice'
                    Fontoffice:
                        id: fontoffice
                Screen:
                    name: 'scrn_hrm'
                    HRM:
                        id: hrm
                Screen:
                    name: 'scrn_labs'
                    Labs:
                        id: labs
                Screen:
                    name: 'scrn_patient'
                    Patient:
                        id: patient
                Screen:
                    name: 'scrn_pharmacy'
                    Pharmacy:
                        id: pharmacy
                Screen:
                    name: 'scrn_report'
                    Report:
                        id: report
                Screen:
                    name: 'scrn_setting'
                    Setting:
                        id: setting

<NavTab>:
    background_normal: ''
    background_down: ''
    background_color: [0,0,0,0]
    group: 'tabs'
    size_hint_y: None
    height: dp(42)
    spacing: dp(4)
    canvas.before:
        Color:
            rgba: [0,0,0,0] if self.state == 'normal' else rgba("#E1F1FF")
        Rectangle:
            pos: self.pos
            size: self.size
        Color:
            rgba: [0,0,0,0] if self.state == 'normal' else app.colors.primary
        Rectangle:
            pos: [self.pos[0]+(self.size[0]-dp(1)), self.pos[1]]
            size: [dp(8), self.size[1]]
    AnchorLayout:
        size_hint_x: None
        width: self.height
        padding: [dp(28),dp(14),dp(0),dp(14)]
        Widget:
            canvas.before:
                Color:
                    rgba: [1,1,1,1]
                Rectangle:
                    pos: self.pos
                    size: self.size
                    source: root.icon if root.state == 'normal' else root.icon_active
    Text:
        halign: 'left'
        valign: 'middle'
        text: root.text
        color: rgba('c4c4c4') if root.state == 'normal' else app.colors.primary
